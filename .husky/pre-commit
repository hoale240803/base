#!/bin/sh
. "$(dirname "$0")/_/husky.sh"

cd "$(git rev-parse --show-toplevel)/VerticalSlice"

echo "üîç Running dotnet format..."
dotnet format VerticalSlice.sln --verify-no-changes
FORMAT_RESULT=$?
echo "dotnet format exit code: $FORMAT_RESULT"

echo "üß™ Running dotnet build..."
dotnet build VerticalSlice.sln -warnaserror
BUILD_RESULT=$?
echo "dotnet build exit code: $BUILD_RESULT"

echo "üß™ Running unit tests..."
dotnet test VerticalSlice.sln
TEST_RESULT=$?
echo "dotnet test exit code: $TEST_RESULT"

# Validate commit message convention
echo "üìù Validating commit message convention..."
npx commitlint --edit
COMMITLINT_RESULT=$?
echo "commitlint exit code: $COMMITLINT_RESULT"

if [ "$FORMAT_RESULT" -ne 0 ] || [ "$BUILD_RESULT" -ne 0 ] || [ "$TEST_RESULT" -ne 0 ] || [ "$COMMITLINT_RESULT" -ne 0 ]; then
  echo "‚ùå Pre-commit checks failed."
  exit 1
fi

echo "‚úÖ All checks passed!"
